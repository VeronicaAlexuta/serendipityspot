    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Mobile menu functionality
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const closeMobileMenuButton = document.getElementById('close-mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
        });

        closeMobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
        });

        // Image Slider functionality
        const sliders = {}; // Store current slide index for each room

        function initializeSliders() {
            document.querySelectorAll('.slider-container').forEach(container => {
                const roomName = container.dataset.room;
                sliders[roomName] = {
                    currentIndex: 0,
                    wrapper: container.querySelector('.slider-wrapper'),
                    items: container.querySelectorAll('.slider-item')
                };
                updateSlider(roomName);
            });
        }

        function updateSlider(roomName) {
            const slider = sliders[roomName];
            const offset = -slider.currentIndex * 100;
            slider.wrapper.style.transform = `translateX(${offset}%)`;
        }

        function moveSlide(roomName, direction) {
            const slider = sliders[roomName];
            slider.currentIndex += direction;

            if (slider.currentIndex < 0) {
                slider.currentIndex = slider.items.length - 1;
            } else if (slider.currentIndex >= slider.items.length) {
                slider.currentIndex = 0;
            }
            updateSlider(roomName);
        }

        // Booking Form Logic
        const hourlyOptions = document.getElementById('hourly-options');
        const dailyOptions = document.getElementById('daily-options');
        const hourlyStartTimeSelect = document.getElementById('hourly-start-time');
        const hourlyDurationSelect = document.getElementById('hourly-duration');
        const dailyStartTimeSelect = document.getElementById('daily-start-time');
        const bookingForm = document.getElementById('booking-form');
        const bookingMessage = document.getElementById('booking-message');
        const errorMessage = document.getElementById('error-message');

        // Generate hourly start time options (8:00 - 22:00)
        function generateHourlyStartTimes() {
            hourlyStartTimeSelect.innerHTML = ''; // Clear previous options
            for (let i = 8; i <= 22; i++) {
                const hour = String(i).padStart(2, '0') + ':00';
                const option = document.createElement('option');
                option.value = hour;
                option.textContent = hour;
                hourlyStartTimeSelect.appendChild(option);
            }
        }

        // Generate hourly duration options (1 to max possible hours)
        function generateHourlyDurationOptions() {
            hourlyDurationSelect.innerHTML = ''; // Clear previous options
            // Max duration is 22 - 8 = 14 hours
            for (let i = 1; i <= 14; i++) {
                const option = document.createElement('option');
                option.value = i;
                option.textContent = `${i} oră${i > 1 ? 'e' : ''}`;
                hourlyDurationSelect.appendChild(option);
            }
        }

        // Generate daily start time options (8:00 - 22:00)
        function generateDailyStartTimes() {
            dailyStartTimeSelect.innerHTML = ''; // Clear previous options
            for (let i = 8; i <= 22; i++) {
                const hour = String(i).padStart(2, '0') + ':00';
                const option = document.createElement('option');
                option.value = hour;
                option.textContent = hour;
                dailyStartTimeSelect.appendChild(option);
            }
        }

        function toggleBookingOptions() {
            const bookingType = document.querySelector('input[name="booking-type"]:checked').value;
            if (bookingType === 'hourly') {
                hourlyOptions.classList.remove('hidden');
                dailyOptions.classList.add('hidden');
                hourlyStartTimeSelect.setAttribute('required', 'true');
                hourlyDurationSelect.setAttribute('required', 'true');
                dailyStartTimeSelect.removeAttribute('required');
            } else { // daily
                hourlyOptions.classList.add('hidden');
                dailyOptions.classList.remove('hidden');
                hourlyStartTimeSelect.removeAttribute('required');
                hourlyDurationSelect.removeAttribute('required');
                dailyStartTimeSelect.setAttribute('required', 'true');
            }
        }

        bookingForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            bookingMessage.classList.add('hidden');
            errorMessage.classList.add('hidden');

            const room = document.getElementById('room-select').value;
            const bookingDate = document.getElementById('booking-date').value;
            const userName = document.getElementById('user-name').value;
            const userEmail = document.getElementById('user-email').value;
            const bookingType = document.querySelector('input[name="booking-type"]:checked').value;

            let bookingDetails = {};

            if (bookingType === 'hourly') {
                const startTime = hourlyStartTimeSelect.value;
                const duration = hourlyDurationSelect.value;
                if (!startTime || !duration) {
                    errorMessage.textContent = "Vă rugăm să selectați ora de început și durata pentru rezervarea pe oră.";
                    errorMessage.classList.remove('hidden');
                    return;
                }
                bookingDetails = {
                    type: 'hourly',
                    startTime: startTime,
                    duration: `${duration} ore`
                };
            } else { // daily
                const dailyStartTime = dailyStartTimeSelect.value;
                if (!dailyStartTime) {
                    errorMessage.textContent = "Vă rugăm să selectați ora de început pentru rezervarea pe zi.";
                    errorMessage.classList.remove('hidden');
                    return;
                }
                bookingDetails = {
                    type: 'daily',
                    startTime: dailyStartTime,
                    duration: 'Întreaga zi'
                };
            }

            if (!room || !bookingDate || !userName || !userEmail) {
                errorMessage.textContent = "Vă rugăm să completați toate câmpurile obligatorii.";
                errorMessage.classList.remove('hidden');
                return;
            }

            const formData = {
                room: room,
                date: bookingDate,
                ...bookingDetails, // Spread bookingDetails here
                name: userName,
                email: userEmail
            };

            console.log("Date de rezervare:", formData);

            // Simulate API call
            setTimeout(() => {
                // In a real application, you would send this data to a server
                // using fetch() or XMLHttpRequest.
                /*
                fetch('/api/book', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        bookingMessage.classList.remove('hidden');
                        bookingForm.reset(); // Clear form on success
                        generateHourlyStartTimes(); // Regenerate for fresh state
                        generateHourlyDurationOptions();
                        generateDailyStartTimes();
                        toggleBookingOptions(); // Reset to default hourly view
                    } else {
                        errorMessage.textContent = data.message || "A apărut o eroare la trimiterea rezervării.";
                        errorMessage.classList.remove('hidden');
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                    errorMessage.textContent = "A apărut o eroare de rețea. Vă rugăm să încercați din nou.";
                    errorMessage.classList.remove('hidden');
                });
                */

                // For demonstration, assume success
                bookingMessage.classList.remove('hidden');
                bookingForm.reset(); // Clear form on success
                generateHourlyStartTimes(); // Regenerate for fresh state
                generateHourlyDurationOptions();
                generateDailyStartTimes();
                toggleBookingOptions(); // Reset to default hourly view
            }, 1000); // Simulate network delay
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            initializeSliders();
            generateHourlyStartTimes();
            generateHourlyDurationOptions();
            generateDailyStartTimes();
            toggleBookingOptions(); // Set initial state based on default radio button
        });
    </script>
</body>
</html>
